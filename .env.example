# Twitch Bot Credentials
# Get these from https://dev.twitch.tv/console/apps
TWITCH_BOT_USERNAME=your_bot_username
TWITCH_OAUTH_TOKEN=oauth:your_oauth_token  # Get from https://twitchapps.com/tmi/
TWITCH_CHANNEL=your_twitch_username
TWITCH_CLIENT_ID=your_client_id            # From Twitch Developer Console
TWITCH_CLIENT_SECRET=your_client_secret    # From Twitch Developer Console

# Text-to-Speech Settings
TTS_ENABLED=true
TTS_LANGUAGE=en  # Language code for TTS (e.g., 'en', 'es', 'fr')

# Milestone Settings
VIEWER_MILESTONES=1,5,10,25,50,100  # Comma-separated list of viewer counts to celebrate
CHAT_KEYWORDS=poggers,lets go,gg,wp,lol,lulw  # Words that trigger celebrations

# Optional: Bot owner (for moderator commands)
BOT_OWNER=your_twitch_username

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
